[Variables]
X.|Ft.Cstm.SA|_Left=-1
X.|Ft.Cstm.SA|_Center=0
X.|Ft.Cstm.SA|_Right=1

SH_0=([Mt.TxSp:H])
SH_1=(#SW#)
Tx.Y.0=([Mt.TxSp:H]/2)
Tx.Y.1=(#SW#/2)

[Ms.IsRotated]
Measure=Calc
Formula=(#Ft.Cstm.Ag#<>0)
DynamicVariables=1

[Rainmeter]
Update=1000
DynamicWindowSize=1
DynamicVariables=1

[Ms.Time]
Measure=Time
Format=#Format#
FormatLocale=#FormatLocale#
TimeZone=#TimeZone#
DaylightSavingTime=#DaylightSavingTime#
DynamicVariables=1

[Mt.Zn]
Meter=Shape
Shape=Rectangle 0,0,(#SW#),([#SH_[&Ms.IsRotated]]) | #da.sk#
DynamicVariables=1

[Mt.TxSp]
Meter=String
MeterStyle=St.ZnCt|St.Ft
W=(#SW#)
ClipString=2
FontFace=#Ft.Cstm.Fc#
FontSize=(10*#Ft.Cstm.Sc#)
FontWeight=(Clamp(#Ft.Cstm.Wt#,1,999))
FontColor=0,0,0,0
StringStyle=#Ft.Cstm.SS#
StringCase=#Ft.Cstm.Scs#
Angle=(rad(#Ft.Cstm.Ag#))
Text=#Cntn#
MeasureName=Ms.Time
DynamicVariables=1
[Mt.TxSd]
Meter=String
MeterStyle=St.ZnCt|St.Ft
X=(#SW#/2+((#SW#/2)*([#X.|Ft.Cstm.SA|_[#Ft.Cstm.SA]])*(cos(PI*((#Ft.Cstm.Ag#)/180)))+[Mt.TxSp:H]/2*((#Ft.Cstm.Ag#/90)))+#Ft.Cstm.Sd.Dt#*(cos(PI*((#Ft.Cstm.Sd.DtAg#-90)/360))))
Y=([#Tx.Y.[&Ms.IsRotated]]+((#SW#/2)*([#X.|Ft.Cstm.SA|_[#Ft.Cstm.SA]])*(sin(PI*((#Ft.Cstm.Ag#)/180)))+[Mt.TxSp:H]/2*(abs((#Ft.Cstm.Ag#/90))))+#Ft.Cstm.Sd.Dt#*(sin(PI*((#Ft.Cstm.Sd.DtAg#-90)/360))))
W=(#SW#)
ClipString=2
FontFace=#Ft.Cstm.Fc#
FontSize=(10*#Ft.Cstm.Sc#)
FontWeight=(Clamp(#Ft.Cstm.Wt#,1,999))
FontColor=#Ft.Cstm.Sd.Cl#,(255*#Ft.Cstm.Sd.Op#)
StringAlign=#Ft.Cstm.SA#Center
StringStyle=#Ft.Cstm.SS#
StringCase=#Ft.Cstm.Scs#
Angle=(rad(#Ft.Cstm.Ag#))
Text=#Cntn#
MeasureName=Ms.Time
DynamicVariables=1
[Mt.Tx]
Meter=String
MeterStyle=St.ZnCt|St.Ft
X=(#SW#/2+((#SW#/2)*([#X.|Ft.Cstm.SA|_[#Ft.Cstm.SA]])*(cos(PI*((#Ft.Cstm.Ag#)/180)))+[Mt.TxSp:H]/2*((#Ft.Cstm.Ag#/90))))
Y=([#Tx.Y.[&Ms.IsRotated]]+((#SW#/2)*([#X.|Ft.Cstm.SA|_[#Ft.Cstm.SA]])*(sin(PI*((#Ft.Cstm.Ag#)/180)))+[Mt.TxSp:H]/2*(abs((#Ft.Cstm.Ag#/90)))))
W=(#SW#)
ClipString=2
FontFace=#Ft.Cstm.Fc#
FontSize=(10*#Ft.Cstm.Sc#)
FontWeight=(Clamp(#Ft.Cstm.Wt#,1,999))
FontColor=#Ft.Cstm.Cl#,(255*#Op.Bg_Cstm#)
StringAlign=#Ft.Cstm.SA#Center
StringStyle=#Ft.Cstm.SS#
StringCase=#Ft.Cstm.Scs#
Angle=(rad(#Ft.Cstm.Ag#))
Text=#Cntn#
MeasureName=Ms.Time
DynamicVariables=1